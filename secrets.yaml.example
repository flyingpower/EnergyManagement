# Secrets Configuration Template
# Copy this file to secrets.yaml and fill in your actual values
# DO NOT commit secrets.yaml to version control!

# ============================================================================
# LOCATION
# ============================================================================
latitude: 48.8566  # Your home latitude
longitude: 2.3522  # Your home longitude
elevation: 50      # Your elevation in meters

# ============================================================================
# DATABASE
# ============================================================================
db_url: sqlite:///config/home-assistant_v2.db

# ============================================================================
# TIBBER API
# Get your token from: https://developer.tibber.com/
# ============================================================================
tibber_api_token: your_tibber_api_token_here

# ============================================================================
# TESLA
# Your Tesla account credentials
# ============================================================================
tesla_username: your_tesla_email@example.com
tesla_password: your_tesla_password

# ============================================================================
# EASEE
# Your Easee account credentials
# ============================================================================
easee_username: your_easee_email@example.com
easee_password: your_easee_password

# ============================================================================
# HTTP (Optional - for reverse proxy setup)
# ============================================================================
# base_url: https://your-domain.com
# ssl_certificate: /ssl/fullchain.pem
# ssl_key: /ssl/privkey.pem
